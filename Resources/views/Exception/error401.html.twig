{% trans_default_domain 'site' %}

{# Defines specific variables #}
{% set title = 'Err401' %}

{% block content %}
{# Alert #}
    <div class="alert alert-danger text-center">
{# Title #}
        <h2>
            <span class="fas fa-thumbs-down"></span> Err401
        </h2>
{# Message #}
        <p>
            <span class="lead"><strong>Ooops...</strong></span><br />
            {{ 'text.err401'|trans }}<br />
        </p>
    </div>
{# Image #}
    {% if errImages.err401 is defined %}
        <p class="text-center">
            <img src="{{ errImages.err401 }}" class="img-responsive" alt="err401" /><br />
        </p>
    {% endif %}
{# Contact #}
    <p class="text-center">
        <a href="{{ path('contactform_display') ~ '?' ~ { 's': 'Err401-' ~ app.request.uri }|url_encode }}" class="btn btn-info btn-lg" rel="nofollow">{{ 'label.point_error'|trans }}</a>
    </p>
{% endblock %}