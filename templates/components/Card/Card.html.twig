{% set icon = icon | default('') %}
{% set class = class | default('') %}
{% set dataAnimation = dataAnimation | default('') %}
<div class="card box-shadow {{ class }}" id="{{ id }}" data-animation="{{ dataAnimation }}">
    {% if icon != "" %}
        <h2 class="card-header"><twig:c975LSite:Image:Icon src="{{ icon[0] }}" class="{{ icon[1] }}" width="{{ icon[2] }}" height="{{ icon[3] }}"/> {{ title }}</h2>
    {% else %}
        <h2 class="card-header">{{ title }}</h2>
    {% endif %}
    <div class="card-body">
        {% block content %}{% endblock %}
    </div>
</div>