{% set c = c | default('') %}
{% set alt = alt | default('') %}
{% set label = label | default('') %}
{% set target = target | default('') %}
<p>
    <a href="{{ url }}" target="{{ target }}"><img src="{{asset(src) }}" class="img img-responsive {{ c }}" alt="{{ alt }}" width="{{ w }}" height="{{ h }}">{% if label != '' %}<br>{{ label }}{% endif %}</a>
</p>