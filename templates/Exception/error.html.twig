{% trans_default_domain 'site' %}

{# Defines specific variables #}
{% set title = 'Err' %}

{% block content %}
{# Alert #}
    <div class="alert alert-danger text-center">
{# Title #}
        <h2>
            <span class="fas fa-thumbs-down"></span> Err
        </h2>
{# Message #}
        <p>
            <span class="lead"><strong>Ooops...</strong></span><br>
            {{ 'text.err'|trans }}<br>
        </p>
    </div>
{# Image #}
    {% if errImages.err is defined %}
        <p class="text-center">
            <img src="{{ errImages.err }}" class="img-responsive" alt="err"><br>
        </p>
    {% endif %}
{% endblock %}